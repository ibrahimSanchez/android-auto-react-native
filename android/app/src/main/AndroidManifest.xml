<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Necesario si tu app accede a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:allowBackup="false"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="${usesCleartextTraffic}"
        android:supportsRtl="true">

        <!-- Actividad principal normal de React Native -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ AGREGADO: Nivel mínimo de API de Car (OBLIGATORIO) -->
        <meta-data
            android:name="androidx.car.app.minCarApiLevel"
            android:value="1" />

        <!-- ✅ Obligatorio para todas las apps de Android Auto -->
        <!-- Apunta al archivo automotive_app_desc.xml -->
        <meta-data  
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />

        <!-- ✅ Servicio Car App -->
        <!-- android:permission ES *OBLIGATORIO* o Android Auto lanza SecurityException -->
        <service
          android:name=".MyCarService"
          android:exported="true"
          android:label="@string/app_name">
          <!-- Necesario para que Android Auto detecte el servicio -->
          <intent-filter>
            <action android:name="androidx.car.app.CarAppService" />
          </intent-filter>
        </service>

    </application>
</manifest>